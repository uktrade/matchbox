{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Matchbox: Debug file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYTHONPATH": "${workspaceFolder}",
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Matchbox: Profile file",
            "type": "debugpy",
            "request": "launch",
            "module": "cProfile",
            "args": [
                "-o", "/tmp/tmp.prof", "${file}"
            ]
        },
        {
            "name": "Matchbox: Attach to API in Docker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678,
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/code"
                }
            ],
            "justMyCode": true
        }
    ]
}